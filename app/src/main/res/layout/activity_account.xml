<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212230"
    tools:context="com.dashwood.ficby.AccountActivity">

    <ImageView
        android:id="@+id/band_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="27dp"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ficby_hi_res"
        android:layout_marginLeft="32dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/user_animation"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="touch_id.json"
        app:lottie_loop="false" />

    <Button
        android:id="@+id/btn_account"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/button_notpress"
        android:text="帳號"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX"
        android:textColor="#efebe9"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_account" />

    <EditText
        android:id="@+id/input_id"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="填入使用者ID  (至少6個字元)"
        android:inputType="textVisiblePassword"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_account" />

    <Button
        android:id="@+id/btn_set_id"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_default"
        android:text="送出"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_account" />

    <Button
        android:id="@+id/btn_heart_rate"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/button_default"
        android:text="心率歷史"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="73dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_account" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="73dp"
        android:background="@drawable/button_default"
        android:text="登出"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn_account"
        android:layout_marginRight="27dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_backto_main"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_default"
        android:text="返回 Ficby 主頁面"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_logout" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/circle_animation"
        android:layout_width="300dp"
        android:layout_height="175dp"
        android:layout_marginTop="169dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_account"
        app:lottie_autoPlay="true"
        app:lottie_fileName="ai_white_circle.json"
        app:lottie_loop="true" />

</android.support.constraint.ConstraintLayout>
