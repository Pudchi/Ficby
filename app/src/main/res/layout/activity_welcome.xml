<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context="com.dashwood.ficby.WelcomeActivity">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/welcome_animation"
        android:layout_width="420dp"
        android:layout_height="420dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="welcome.json"
        app:lottie_loop="true"
        app:layout_constraintHorizontal_bias="0.56" />

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginTop="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ficby_hi_res"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageView
        android:id="@+id/beacon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/beacon"
        app:layout_constraintTop_toTopOf="@+id/welcome_animation"
        android:layout_marginTop="350dp"
        android:layout_marginRight="36dp"
        app:layout_constraintRight_toLeftOf="@+id/bluetooth" />

    <ImageView
        android:id="@+id/bluetooth"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="348dp"
        app:layout_constraintTop_toTopOf="@+id/welcome_animation"
        app:srcCompat="@mipmap/bluetooth_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

    <ImageView
        android:id="@+id/firebase"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="350dp"
        app:layout_constraintLeft_toRightOf="@+id/bluetooth"
        app:layout_constraintTop_toTopOf="@+id/welcome_animation"
        app:srcCompat="@mipmap/firebase" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/welcome_loader"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="442dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="infinity_loader.json"
        app:lottie_loop="true"
        app:layout_constraintHorizontal_bias="0.5" />

</android.support.constraint.ConstraintLayout>
